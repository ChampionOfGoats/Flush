@using System.Diagnostics;
@using System.IO;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Flush</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.css" />
    <link rel="stylesheet" href="~/css/app.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container" id="navbararea">
                <a class="navbar-brand" asp-area="" asp-page="/Index">ScrumPokerClub</a>
                <form class="form-inline">
                    <div class="btn-group ml-2">
                        <span data-toggle="modal" data-target="#gameInfoModalLong">
                            <button class="btn btn-outline-secondary" type="button" id="getInfoButton" data-toggle="tooltip" data-placement="bottom" title="How to Play">
                                <i class="far fa-question-circle"></i>
                            </button>
                        </span>
                    </div>
                    <div class="btn-group btn-group-toggle ml-2" data-toggle="buttons">
                        <label class="btn btn-outline-secondary" data-toggle="tooltip" data-placement="bottom" title="I'm a Moderator">
                            <input type="checkbox" id="playerIsModerator"><i class="fas fa-user-shield"></i>
                        </label>
                        <label class="btn btn-outline-secondary" data-toggle="tooltip" data-placement="bottom" title="I'm an Observer">
                            <input type="checkbox" id="playerIsObserver"><i class="fas fa-binoculars"></i>
                        </label>
                    </div>
                    <div class="btn-group ml-2">
                        <!--
        <button class="btn btn-outline-secondary" type="button" id="settingsButton" data-toggle="tooltip" data-placement="bottom" title="Room Settings" disabled>
            <i class="fas fa-cog"></i>
        </button>
        <button class="btn btn-outline-secondary" type="button" id="getLinkButton" data-toggle="tooltip" data-placement="bottom" title="Get a Link" disabled>
            <i class="fas fa-external-link-alt"></i>
        </button>
        -->
                        <button class="btn btn-outline-danger" type="button" id="leaveRoomButton" data-toggle="tooltip" data-placement="bottom" title="Leave the Room" disabled>
                            <i class="fas fa-sign-out-alt"></i>
                        </button>
                    </div>
                </form>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-left">
                    &copy; 2020 - <a href="https://www.linkedin.com/in/championofgoats/">Leif Walker-Grant</a>
                </div>
                <div class="col-md-6 text-right">
                    Flush @String.Format("v{0}", FileVersionInfo.GetVersionInfo(typeof(Flush.Program).Assembly.Location).ProductVersion), built on @File.GetCreationTime(typeof(Flush.Program).Assembly.Location).ToUniversalTime()
                </div>
            </div>
        </div>
    </footer>

    <div class="loading-overlay d-flex justify-content-center align-items-center" id="loader-complete">
        <div id="loader-">
            <div class="spinner-border text-danger align-middle spinner-load" role="status">
                <span class="sr-only">Loading...</span>
            </div>
            <span class="spinner-name align-bottom ml-2">ScrumPokerClub</span>
        </div>
    </div>

    @{ await Html.RenderPartialAsync("Partials/_GameInfo"); }
    @{ await Html.RenderPartialAsync("Partials/_Disconnected"); }

    @RenderSection("Scripts", required: false)

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>
    <script src="~/lib/chart/dist/Chart.Labels.min.js"></script>
    <script src="https://kit.fontawesome.com/50326a7491.js" crossorigin="anonymous"></script>
    <script src="~/js/app.min.js" asp-append-version="true"></script>
    <script>(function () {
            $(document).ready(function () {
                $('#loader-complete').remove();
            });
        })();</script>
</body>
</html>
