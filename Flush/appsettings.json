{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000/"
      }
    }
  },

  "IdentityDb": {
    "ConnectionString": "Data Source=data-sources/identity.enc",
    "Key": "identity_key"
  },
  "FlushDb": {
    "ConnectionString": "Data Source=data-sources/flush.enc",
    "Key": "flush_key"
  },
  "JwtAuthentication": {
    "Key": "jwt_key"
  }
}
